@model IEnumerable<WebBanHang.Models.ShoppingCartItem>

@if (Model != null && Model.Any())
{
    <h3>Giỏ hàng <span style="float:right"><small>@Model.Count()</small></span></h3>
    var tong = decimal.Zero;
<div style="border:1px solid #808080">
    <table class="table">
        @foreach (var item in Model)
        {
            tong += item.Total;
            <tr>
                <td>@item.ProductName</td>
                <td>@WebBanHang.Common.Common.FormatNumber(item.Price, 0)</td>
            </tr>
        }
        <tr>
            <td>Tổng tiền</td>
            <td>@WebBanHang.Common.Common.FormatNumber(tong, 0)</td>
        </tr>
    </table>
</div>



}
else
{

}

