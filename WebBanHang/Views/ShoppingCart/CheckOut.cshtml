
@{
    ViewBag.Title = "Thanh toán";
}

<style>
    .error{color:red;}
</style>

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="#">Home</a></li>
                    <li class="active"><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Giỏ hàng</a></li>
                </ul>
            </div>

            <!-- Sidebar -->
            <!-- Main Content -->
            <div class="row">
                <div class="col-md-12 text-center">
                    <h1>Thanh toán</h1>
                    <p>Bạn hãy kiểm tra lại thông tin đơn hàng!</p>
                </div>

            </div>
            <hr />
            @if (ViewBag.CheckCart != null)
            {
                <div class="row">
                    <div style="display:none" id="show_success"></div>
                    <div class="col-md-9">
                       @Html.Action("Partial_CheckOut","ShoppingCart")
                    </div>



                    <div class="col-md-3">
                        @Html.Action("Partial_Item_Thanhtoan", "ShoppingCart")
                    </div>
                </div>
            }
            else
            {
                <div>Bạn chưa có sản phẩm nào trong giỏ hàng! Vui lòng quay lại <a href="/san-pham">sản phẩm</a> để mua hàng!</div>
            }


        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/assets/js/categories_custom.js"></script>
    <script>
        function OnSuccessCO(rs) {
            // Kiểm tra xem responseJSON có tồn tại không
            if (rs.responseJSON) {
                console.log("OnSuccessCO called with response:", rs.responseJSON); // Kiểm tra cấu trúc rs.responseJSON
                if (rs.responseJSON.Success) {
                    window.location.href = rs.responseJSON.redirectUrl;
                } else {
                    console.error("rs.responseJSON.Success is undefined or false");
                }
            } else {
                console.error("responseJSON is not available in rs");
            }
        }

        function OnFailure(rs) {
            if (!rs.Success) {
                $('#show_success').html("Bạn mua hàng thất bại! Vui lòng thử lại!");
            }
        }
        $(document).ready(function () {
            $('#myForm').validate({
                rules: {
                    'CustomerName': {
                        required: true
                    },
                    'Phone': {
                        required: true
                    },
                    'Address': {
                        required: true
                    },
                    'Email': {
                        required: true,
                        email:true
                    },
                },
                messages: {
                    'CustomerName': 'Bạn không được để trống trường này!',
                    'Phone': 'Bạn không được để trống trường này!',
                    'Address': 'Bạn không được để trống trường này!',
                    'Email': 'Email chưa hợp lệ!',
                }
            });
        });
            
        
    </script>
}

