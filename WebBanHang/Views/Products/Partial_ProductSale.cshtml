@model IEnumerable<WebBanHang.Models.EF.Product>
@if (Model != null && Model.Any())
{
    <div class="product_slider_container">
        <div class="owl-carousel owl-theme product_slider">
            @foreach (var item in Model)
            {
                var strImg = "";
                var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
                if (img != null)
                {
                    strImg = img.Image;
                }
                <div class="owl-item product_slider_item">
                    <div class="product-item">
                        <div class="product discount">
                            <div class="product_image">
                                <img src="@strImg" alt="@item.Title">
                            </div>
                            <div class="favorite favorite_left"></div>
                            @if (item.PriceSale > 0)
                            {
                                var price = Convert.ToDouble(item.PriceSale);
                                <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-@price%</span></div>
                            }
                            else
                            {

                            }
                            <div class="product_info">
                                <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.Id)">@item.Title</a></h6>
                                @if (item.PriceSale > 0)
                                {
                                    var sale = Convert.ToDouble(item.PriceSale);
                                    var price = Convert.ToDouble(item.Price);
                                    var priceSale = (price) - (0.01 * sale * price);
                                    <div class="product_price">@WebBanHang.Common.Common.FormatNumber(priceSale, 0)<span>@WebBanHang.Common.Common.FormatNumber(price, 0)</span></div>
                                }
                                else
                                {
                                    <div class="product_price">@WebBanHang.Common.Common.FormatNumber(item.Price, 0)</div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Slider Navigation -->

        <div class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column">
            <i class="fa fa-chevron-left" aria-hidden="true"></i>
        </div>
        <div class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column">
            <i class="fa fa-chevron-right" aria-hidden="true"></i>
        </div>
    </div>
}
