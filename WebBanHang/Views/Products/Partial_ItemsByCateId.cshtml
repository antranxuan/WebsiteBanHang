@model IEnumerable<WebBanHang.Models.EF.Product>
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        var strImg = "";
        var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImg = img.Image;
        }
        <div class="product-item @item.ProductCategory.Alias">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src="@strImg" alt="@item.Title">
                </div>
                <div class="favorite favorite_left"></div>
                @if (item.PriceSale > 0)
                {
                    var price = Convert.ToDouble(item.PriceSale);
                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-@price%</span></div>
                }
                else
                {

                }
                <div class="product_info">
                    <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.Id)">@item.Title</a></h6>
                    @if (item.PriceSale > 0)
                    {
                        var sale = Convert.ToDouble(item.PriceSale);
                        var price = Convert.ToDouble(item.Price);
                        var priceSale = (price) - (sale * 0.01 * price);
                        <div class="product_price">@WebBanHang.Common.Common.FormatNumber(priceSale, 0)<span>@WebBanHang.Common.Common.FormatNumber(item.Price, 0)</span></div>
                    }
                    else
                    {
                        <div class="product_price">@WebBanHang.Common.Common.FormatNumber(item.Price, 0)</div>
                    }
                </div>
            </div>
            @if (item.Quantity <= 0)
            {
                <div class="red_button add_to_cart_button">Hết hàng</div>
            }
            else
            {
                <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">add to cart</a></div>
            }
        </div>
    }
}
