@model IEnumerable<WebBanHang.Models.EF.OrderDetail>
@if (Model != null && Model.Any())
{
    var stt = 0;
    <div class="col-md-12">
        <h2>Danh sach san pham</h2>
    </div>
    <div class="col-md-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tên sản phẩm</th>
                    
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                
                @foreach (var item in Model)
                {
                    stt++;
                    <tr>
                        <td>@stt</td>
                        <td>@item.Product.Title</td>
                        
                        <td>@WebBanHang.Common.Common.FormatNumber(item.Price, 0)</td>
                        <td>@item.Quantity</td>
                        <td>@WebBanHang.Common.Common.FormatNumber((item.Price * item.Quantity), 0)</td>
                    </tr>
                    
                }
            </tbody>
        </table>
    </div>
}
